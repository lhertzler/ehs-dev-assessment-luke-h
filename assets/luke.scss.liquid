.announcement-bar {
    p {
        font-weight: bold;
        font-size: 14px;
        color: #FFFFFF;
        letter-spacing: 1px;
        text-align: center;
        line-height: 20px;
    }
}
.main-content {
    .btn {
        font-weight: bold;
        font-size: 14px;
        color: #FFFFFF;
        letter-spacing: 2px;
        text-align: center;
        line-height: 28px;
        background: #141414;
    }
}
#shopify-section-header {
    .site-header {
      @media only screen and (min-width: 750px) {
          padding: 21px 55px;
      }
        .site-nav {
            text-align: left;
            a {
                font-weight: bold;
                font-size: 14px;
                color: #4A4A4A;
                letter-spacing: 2px;
                padding-left: 20px;
                padding-right: 20px;
                margin-top: 17px;
                span.site-nav__label.SALE {
                    color: #FF2500;
                }
            }
        }
        .site-header__icons {
            width: 40%;
        }
        .search {
            position: relative;
            input {
                border-radius: 20px;
                border-color: #C4C4C4;
                font-size: 13px;
                color: #A3A3A3;
                font-weight: 500;
                width: 100%;
                margin-bottom: 0;
                &::placeholder { 
                    color: #A3A3A3;
                    opacity: 1;
                }

                &:-ms-input-placeholder { 
                    color: #A3A3A3;
                }

                &::-ms-input-placeholder { 
                    color: #A3A3A3;
                }
            }
            svg {
                position: absolute;
                top: 50%;
                right: 10px;
                transform: translateY(-50%);
                fill: #767676;
            }
        }
        .customer-account {
            border-right: 1px solid #D8D8D8;
            padding: 0 32px;
            margin-right: 32px;
            p, a {
                font-size: 14px;
                color: #4A4A4A;
                letter-spacing: 0;
                text-align: center;
                margin: 0;
            }
            a {
                text-decoration: underline;
            }
        }
        .site-header__cart {
            padding: 0;
            img {
                width: 29.99px;
                height: 26px;
                max-width: 29.99px;
            }
            .site-header__cart-count {
                right: -7px;
                top: -9px;
                background-color: #005BC4;
            }
        }
    }
}

.hero {
    .mega-subtitle p, .mega-title {
        color: #141414;
        text-shadow: 0 0 0 transparent !important;
    }
    .mega-title {
        font-size: 80px;
        letter-spacing: 5px;
    }
    .mega-subtitle p {
        font-weight: 500;
        font-size: 20px;
        letter-spacing: 1.25px;
    }
    .hero__inner {
        > div {
            position: absolute;
            top: 48%;
            left: 10%;
            padding: 0;
            transform: translate(-10%, -50%);
            max-width: 725px;
            a.btn {
                padding: 15px 49px;
                margin-right: 28px;
                border-radius: 4px;
                &:nth-of-type(4) {
                    margin-right: 0;
                }
            }
        }
    }
}

.vacay-section {
    position: relative;
    .image {
        text-align: right;
    }
    .info {
        padding: 30px;
        max-width: 650px;
        position: absolute;
        left: 5%;
        top: 40%;
        transform: translateY(-40%);
        background: white;
        .card {
            border: 2px solid #ECECEC;
            padding: 65px 82px;
            h3 {
                font-weight: bold;
                font-size: 42px;
                color: #141414;
                letter-spacing: 0;
            }
            p {
                font-size: 16px;
                color: #141414;
                letter-spacing: 1px;
                text-align: left;
                line-height: 26px;
            }
        }
    }
}
.main-content .shopify-section {
    &.collections-section {
        max-width: 1300px;
        margin: auto;
        display: flex;
        justify-content: space-between;
        .collection {
            width: calc(50% - 20px);
            position: relative;
            height: 100%;
            .collection-info {
                position: absolute;
                bottom: 5%;
                background: white;
                width: 90%;
                left: 50%;
                transform: translateX(-50%);
                text-align: center;
                padding: 49px;
                h3 {
                    font-size: 28px;
                    color: #141414;
                    letter-spacing: 3px;
                    text-align: center;
                }
                p {
                    font-size: 16px;
                    color: #141414;
                    letter-spacing: 1px;
                    text-align: center;
                    line-height: 26px;
                }
                .links {
                    a {
                        font-weight: bold;
                        font-size: 14px;
                        color: #141414;
                        letter-spacing: 2px;
                        text-align: center;
                        line-height: 28px;
                        padding: 0 10px;
                        position: relative;
                        text-decoration: underline;
                        &::after {
                            content: "|";
                            position: absolute;
                            right: 0;
                        }
                        &:last-of-type::after {
                            content: "";
                        }
                    }
                }
            }
        }
    }
    &.icons-section {
        background: linear-gradient(225deg, #FAFBFB 0%, #F7F8F8 100%);;
        display: flex;
        justify-content: space-around;
        padding: 55px 0;
        .icon {
            text-align: center;
            width: calc(100% / 3);
            flex: calc(100% / 3);
            height: auto;
            .image {
                margin-bottom: 24px;
            }
            p {
                font-weight: bold;
                font-size: 20px;
                color: #141414;
                letter-spacing: 1px;
                text-align: center;
                line-height: 28px;
                width: 191px;
                margin: auto;
            }
        }
    }
}

